@page
@using Packt.Shared
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PacktFeatures.Pages.EmployeesPageModel

<div class="row">
    <h1 class="display-2">Employees</h1>
</div>
<div class="row">
    @foreach (var employee in Model.Employees)
    {
    <div class="col-sm-3">
        <!-- Partial tag helper renders content asynchronously... https://docs.microsoft.com/en-us/aspnet/core/mvc/views/partial?view=aspnetcore-5.   --> 
        <partial name="_Employee" model="employee" />
    </div>
    }
</div>
